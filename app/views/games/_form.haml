= form_for @game do |f|
  .form-group
    = f.label :title
    = f.text_field :title
  .form-group
    = f.label :description
    = f.text_area :description
  .form-group
    = f.label :short_description
    = f.text_area :short_description
  .form-group
    = f.label :price
    = f.number_field :price
  .form-group
    = f.submit
